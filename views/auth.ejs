<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Authentication - <%= pageType.charAt(0).toUpperCase() + pageType.slice(1) %></title>
    <link rel="stylesheet" href="/css/globals.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="/js/script.js"></script>
  </head>
  <body>
    <!-- Auth Toast Component -->
    <div class="toast-container">
      <div id="toast-root" class="ToastRoot">
        <div class="ToastTitle">Success</div>
        <time class="ToastDescription">
          <%= prettyDate(eventDateRef) %>
        </time>
        <button class="Button small green">Undo</button>
      </div>
    </div>

    <!-- Main Content -->
    <div class="grid lg:grid-cols-2 h-full w-full">
      <!-- <div class="h-full border lg:block hidden bg-[url('/images/login.jpg')] bg-no-repeat bg-cover brightness-50"></div> -->
      <div>
        <div class="fixed text-2xl font-bold mx-5 mt-5 text-yellow-500">CV BUILDER</div>
        <div class="flex h-full gap-10 justify-center items-center w-full">
          <div class="flex flex-col gap-5 w-[25rem] mt-16">
            <% if (pageType === 'login') { %>
              <%- include('partials/login-form') %>
            <% } else if (pageType === 'register') { %>
              <%- include('partials/register-form') %>
            <% } else if (pageType === 'forgot-password') { %>
              <%- include('partials/forgot-password-form') %>
            <% } %>
            
            <!-- Text Between Line Component -->
            <div class="relative flex items-center w-full text-near_normal">
              <div class="flex-grow border-t border-white"></div>
              <!-- <span class="flex-shrink mx-4 text-white">
                <%= children %>
              </span> -->
              <div class="flex-grow border-t border-white"></div>
            </div>

            <!-- Oauth Component -->
            <!-- <a href="/auth/google" class="text-white bg-red-500 rounded-xl py-2 px-4">Login with Google</a> -->

          </div>
        </div>
      </div>
    </div>
  </body>
</html>






